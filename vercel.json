{
  "version": 2,
  "buildCommand": "echo 'No build needed - serving development version'",
  "outputDirectory": ".",
  "installCommand": "npm install --force",
  "framework": null,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "client/**", 
          "shared/**", 
          "vite.config.ts", 
          "tailwind.config.ts", 
          "tsconfig.json",
          "components.json",
          "postcss.config.js"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "development"
  }
}
